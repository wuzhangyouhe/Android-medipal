<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPaddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/list_item_health_measurement"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/textview_vertical_margin"
            android:ellipsize="marquee"
            android:textAppearance="@style/CardViewTextSubtitle" />

        <TextView
            android:id="@+id/textViewSystolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/textview_vertical_margin"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textAppearance="@style/CardViewTextTitle" />

        <TextView
            android:id="@+id/textViewDiastolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSystolic"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/textview_vertical_margin"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textAppearance="@style/CardViewTextTitle" />

        <TextView
            android:id="@+id/textViewPulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDiastolic"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/textview_vertical_margin"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textAppearance="@style/CardViewTextTitle" />

        <TextView
            android:id="@+id/textViewTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPulse"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/textview_vertical_margin"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textAppearance="@style/CardViewTextTitle" />

        <TextView
            android:id="@+id/textViewWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTemperature"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/textview_vertical_margin"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textAppearance="@style/CardViewTextTitle" />

        <TextView
            android:id="@+id/textViewGlucose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewWeight"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/textview_vertical_margin"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textAppearance="@style/CardViewTextTitle" />

        <TextView
            android:id="@+id/textViewCholestrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewGlucose"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/textview_vertical_margin"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textAppearance="@style/CardViewTextTitle" />

    </RelativeLayout>

</android.support.v7.widget.CardView>